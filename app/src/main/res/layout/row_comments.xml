<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="@color/white">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:id="@+id/uPictureIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="150dp">

            <ImageView
                android:src="@drawable/ic_default_person"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/nameTv"
            android:layout_toRightOf="@+id/uPictureIv"
            android:text="username"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/commentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:text="This is actual comment"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/uPictureIv"/>

        <TextView
            android:id="@+id/timeTv"
            android:text="12/04/2023"
            android:layout_below="@+id/commentTv"
            android:layout_toEndOf="@+id/uPictureIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>